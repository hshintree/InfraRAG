# === Postgres (local dev) ===
DB_HOST=localhost
DB_PORT=5433
DB_NAME=infra_rag
DB_USER=postgres
DB_PASSWORD=changeme_local_pw

# === pgAdmin (docker local) ===
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=changeme

# === Retrieval / Embeddings ===
# Use remote embedding via Modal (0=off, 1=on). Defaults off; local SentenceTransformers used.
USE_MODAL_EMBED=0
# Local embedding model for sentence-transformers
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# === Vector index tuning (pgvector) ===
IVFFLAT_LISTS=200
IVFFLAT_PROBES=10

# === Hybrid fusion + context expansion ===
RRF_K=60
NEIGHBOR_WINDOW=1
MAX_DEF_MATCH=6

# === LangChain + DSPy orchestrator (optional) ===
# Enable the new orchestrator that synthesizes queries and reranks results
USE_LANG_DSPY=0
# Chat model for LangChain (OpenAI)
LLM_MODEL=gpt-4o-mini
# OpenAI API key required if USE_LANG_DSPY=1
OPENAI_API_KEY=sk-replace-with-your-key
# (Optional legacy var, used as fallback)
LANGCHAIN_MODEL=gpt-4o-mini

# === Reranker (optional) ===
# Cross-encoder model name for reranking; leave unset to disable
RERANKER_MODEL=ms-marco-MiniLM-L-12-v2

# === Modal embedding (optional knobs) ===
EMBED_BATCH_SIZE=128
EMBED_PARALLEL=4